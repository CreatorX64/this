rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /transactions/{document=**} {
      // allow read, write: if request.time < timestamp.date(2022, 1, 22);
      // allow read, write; // (write: create, update, delete)
      // allow read, create, delete;

      // Only authenticated users can create documents.
      allow create: if request.auth != null;

      // Users can only read & delete that belongs to them.
      allow read, delete: if request.auth.uid == resource.data.uid;
    }
  }
}
