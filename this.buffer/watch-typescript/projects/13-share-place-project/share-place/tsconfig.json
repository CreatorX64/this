{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  }
}
